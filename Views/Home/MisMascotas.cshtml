<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/7.0.2/default/default-main.css" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.3.1114/js/kendo.all.min.js"></script>
    <link href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.default.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.all.min.js"></script>
    <script src="js/kendo.all.min.js"></script>
</head>
<body>
    <div class="container">
        <div style="text-align:center;"><h1>Mis Mascotas</h1></div>
        <div id="mascotas-list"></div>
        <div style="margin-top:4rem;text-align:center;">
            <button type="button" class="btn btn-new-mas">Nueva Mascota</button>
        </div>
    </div>
</body>
</html>

<script type="text/x-kendo-template" id="template">
    <div class="card" style="width:18rem; border:1px solid; text-align:center;height:fit-content; margin-bottom:1rem;">
        <div style="height:5rem;">
            <img class="mascota-img" src="../Image/#= type #.png" />
        </div>

        <div class="card-body">
            <h3>#:name#</h3>
            <p>#:age#</p>
        </div>
    </div>
</script>

<script>
    var mascotas = [
        { id: 1, name: "Candy", age:"3 años", type: "perro" },
        { id: 2, name: "Kitty", age: "5 años", type: "gato" },
        { id: 3, name: "Bonnie", age: "5 meses", type: "conejo" },
        { id: 4, name: "Candy", age: "3 años", type: "perro" },
        { id: 5, name: "Kitty", age: "5 años", type: "gato" },
        { id: 6, name: "Bonnie", age: "5 meses", type: "conejo" },
        { id: 7, name: "Candy", age: "3 años", type: "perro" },
        { id: 8, name: "Kitty", age: "5 años", type: "gato" },
        { id: 9, name: "Bonnie", age: "5 meses", type: "conejo" },
    ];
    
    $("#mascotas-list").kendoListView({
        dataSource: {
            data: mascotas
        },
        template: kendo.template($("#template").html()),
        pageable: false,
        height: 450,
        scrollable: "endless",
    });
    
</script>

<style>

    body {
        background-color: rgba(220, 199, 170, .25)
    }

    .k-listview-content {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        justify-items: center;
    }

    .mascota-img{
        width:30%;
    }

    #mascotas-list{
        padding:1rem;
        border:none;
        background-color: transparent;
    }

    .btn-new-mas {
        background-color: #F7C331;
        width: 30%;
        color: white;
        height:40px;
    }
</style>